#formatting
set gofmt-auto "yes"
set nixfmt-auto "yes"
set clangfmt-auto "yes"
#paren
set auto-paren-skip "yes"
set auto-dquote-skip "yes"
set auto-quote-skip "yes"
#pastebin
set pastebin-fav "paste-rs"
#sysclip
set sys-clip 'xsel'
#git
set git-variables-branch-icon "î‚  "
#line
set status-line-left "%[&code-comment.fg swap &search.fg] ïŒŒ %t%[&code-comment.fg swap &search.fg]  %(drill-mode)  ïžŸ%[&code-comment.fg swap &search.fg] %b%[&code-comment.fg swap &search.fg]  %l:%c  %p%%%[&code-comment.fg]ðŸ­¬"
